{
  "name": "quiz-game",
  "version": "1.0.0",
  "description": "Quiz Game Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "cross-env GENERATE_SOURCEMAP=false cd quiz-game-frontend && npm install && npm run build",
    "dev": "nodemon server.js",
    "client": "cd quiz-game-frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
