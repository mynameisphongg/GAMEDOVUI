{
  "name": "quiz-game",
  "version": "1.0.0",
  "description": "Quiz Game Application",
  "main": "server.js",
  "scripts": {
    "start": "node --max-old-space-size=512 server.js",
    "build": "npm install && cd quiz-game-frontend && npm install && npm run build",
    "dev": "nodemon server.js",
    "client": "cd quiz-game-frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "postinstall": "cd quiz-game-frontend && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "compression": "^1.7.4",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": "16.20.0",
    "npm": "8.19.4"
  }
}
